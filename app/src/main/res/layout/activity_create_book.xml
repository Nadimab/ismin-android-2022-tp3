<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateBookActivity">


    <EditText
        android:id="@+id/a_create_book_edt_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:hint="@string/author"
        app:layout_constraintEnd_toEndOf="@+id/a_create_book_edt_title"
        app:layout_constraintStart_toStartOf="@+id/a_create_book_edt_title"
        app:layout_constraintTop_toBottomOf="@+id/a_create_book_edt_title"
        android:importantForAutofill="no" />

    <EditText
        android:id="@+id/a_create_book_edt_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        android:minHeight="48dp"
        android:hint="@string/date"
        app:layout_constraintEnd_toEndOf="@+id/a_create_book_edt_author"
        app:layout_constraintStart_toStartOf="@+id/a_create_book_edt_author"
        app:layout_constraintTop_toBottomOf="@+id/a_create_book_edt_author"
        android:importantForAutofill="no" />

    <EditText
        android:id="@+id/a_create_book_edt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:hint="@string/title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/a_create_book_btn_save"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/a_create_book_edt_date"
        app:layout_constraintStart_toStartOf="@+id/a_create_book_edt_date"
        app:layout_constraintTop_toBottomOf="@+id/a_create_book_edt_date" />

</androidx.constraintlayout.widget.ConstraintLayout>